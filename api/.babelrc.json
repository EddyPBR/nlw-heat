{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        }
      }
    ],
    "@babel/preset-typescript"
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "alias": {
          "@controllers": "./src/controllers",
          "@models": "./src/models",
          "@exceptions": "./src/exceptions",
          "@middlewares": "./src/middlewares",
          "@services": "./src/services",
          "@prisma": "./src/prisma"
        }
      }
    ]
  ],
  "ignore": [
    "**/*.spec.ts"
  ]
}